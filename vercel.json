{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    // 1) 
    { "handle": "filesystem" },
    // 2) (Optional) Pass /api/* through if you ever have Vercel Functions
    { "src": "/api/(.*)", "dest": "/api/$1" },
    // 3) All other routes â†’ index.html so React Router can handle them
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
